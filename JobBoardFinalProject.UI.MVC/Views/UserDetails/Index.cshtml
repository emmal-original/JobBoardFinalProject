@model IEnumerable<JobBoardFinalProject.DATA.EF.UserDetail>

@{
    ViewBag.Title = "User Details";
}

<h2>@ViewBag.Title</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
</p>*@

<h3 class="text-danger">@TempData["ResumeErrorMessage"]</h3>
<h3 class="text-danger">@TempData["InvalidFileType"]</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ResumeFilename)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>*@
            <td>
                @if (item.ResumeFilename == null)
                {
                @Html.ActionLink("Add Resume", "Edit", new { id = item.UserId })
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.ResumeFilename)
                    @Html.Raw(" | ")
                    <a href="@Url.Content("~/Content/Documents/EmployeeResumes/" + item.ResumeFilename)" target="_blank">View Resume</a>
                }

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
            </td>
        </tr>
    }

</table>
